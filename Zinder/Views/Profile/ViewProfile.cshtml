
@model Zinder.Models.ProfileViewModel



<div>
    <h2>Your profile</h2>

    <hr />

    <div class="container">
        <img src="@Model.ImageUrl" alt="Avatar-Image" class="img-thumbnail" style="height:170px;width:auto;" />
    </div>

    <br />

    <dl class="dl-horizontal">
        <dt>
            First Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            Last Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            Date of Birth:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>

        <dt>
            Profile Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <br />

</div>