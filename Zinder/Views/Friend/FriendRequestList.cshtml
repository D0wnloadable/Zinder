
@model IEnumerable<Zinder.Models.FriendViewModel>

@{
    ViewBag.Title = "Friend Requests";
}



@if (User.Identity.IsAuthenticated)
{
    <h2>Friend Requests</h2>

    <hr />

    foreach (var friend in Model)
    {
        <a class=" list-group-item" href="/Search/UserProfile/@friend.ID">
            @Html.DisplayFor(modelItem => friend.FirstName) @Html.DisplayFor(modelItem => friend.LastName)
        </a>

        <button type="button" class="btn btn-success"
                onclick="location.href='@Url.Action("AcceptFriendRequest", "Friend", new { id = friend.RequesterId })'">
            Accept!
        </button>

        <button type="button" class="btn btn-danger"
                onclick="location.href='@Url.Action("DenyFriendRequest", "Friend", new { id = friend.RequesterId })'">
            Deny..
        </button>
    }
}
else
{
    <hr />

    <h4>You have to sign in before you can access your notifications.</h4>
}